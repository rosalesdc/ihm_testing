<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="vista_crm_sale_button">
            <field name="name">vista.crm.sale.button</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                
                <xpath expr="//button[@class='oe_highlight']"position="attributes">
                    <attribute context="search_default_partner_id': partner_id,                                   'default_partner_id': partner_id,                                   'default_team_id': team_id,                                   'default_campaign_id': campaign_id,                                   'default_medium_id': medium_id,                                   'default_origin': name,                                   'default_source_id': source_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>