<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="escrituras_form_view" model="ir.ui.view">
            <field name="name">escrituras.form.view</field>
            <field name="model">venta.escrituras</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>InformaciÃ³n de Escritura</h1>
                        </div>
                        <group>
                            <field name="name"></field>
                            <field name="notaria"></field>
                            <field name="fecha_escritura"></field>
<!--                            <field name="orden_id" view_id="escrituras_tree_view"></field>-->
<!--                            <field name="message_ids" widget="mail_thread"/>	-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="escrituras_tree_view" model="ir.ui.view">
            <field name="name">escrituras.tree.view</field>
            <field name="model">venta.escrituras</field>
            <field name="arch" type="xml">
                <tree string="Escritura-">
                    <field name="name"></field>
                    <field name="notaria"></field>
                    <field name="fecha_escritura"></field>
<!--                    <field name="orden_id"></field>-->
                </tree>
            </field>
        </record>

        <record id="escrituras_search_view" model="ir.ui.view">
            <field name="name">escrituras.search.view</field>
            <field name="model">venta.escrituras</field>
            <field name="arch" type="xml">
                <search>
<!--                    <field name="orden_id" />-->
                    <field name="name" />
                </search>
            </field>
        </record>
                
        <record id="venta_escritura_action_window" model="ir.actions.act_window">               
            <field name="name">Escrituras</field>
            <field name="res_model">venta.escrituras</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
<!--            <field name="context">
                {
                'search_default_orden_id': [active_id], 
                'default_orden_id': active_id,
                }
            </field>-->
        </record>
    </data>
</odoo>