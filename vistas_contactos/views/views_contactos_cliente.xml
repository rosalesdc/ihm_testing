<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      <record id="solo_clientes_kan_inherited" model="ir.ui.view">
          <field name="name">solo.clientes.kan.inherited</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.res_partner_kanban_view"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='id']" position="replace">
                  <field name="id" domain="[('customer','=','True')]" string="Un string"/>
              </xpath>
          </field>
        </record>
        <record id="solo_clientes_tree_inherited" model="ir.ui.view">
            <field name="name">solo.clientes.tree.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="partner_id"  domain="[('partner_id', '=', 5)]"/>
                </xpath>
            </field>
          </record>
    </data>
</odoo>
